import java.util.Scanner;
class Taller6
{
 public static void main(String h[])
  {
  Scanner lea=new Scanner(System.in);
  int contador=1;
  float nota,promedio,prom_perdidos=0;
  
  while (contador<=50){
  System.out.println("NOTA");
  nota=lea.nextFloat();
  
  if (nota<=3.4){
  prom_perdidos=prom_perdidos+nota; 
  }
  
  contador=contador+1;
  }
  
  promedio=prom_perdidos/50;
  System.out.println("promedio de perdidos es "+promedio);
  
  
  
  }
 } 

