public class ClaseMath14 {

    public static void main(String[] args) {
    
    
Scanner leer= new Scanner (System.in);
float n1, n2;
System.out.println("Ingrese el primer valor: ");
n1 = leer.nextInt();
System.out.println("Ingrese el segundo valor");
n2 = leer.nextInt();
n2 = (float) Math.pow(n2,-1);

float resultado = n1 * n2;

System.out.println(" el resultado de la division es: " + resultado);

    }

}

//EJERCICIO 3

import java.util.Scanner;
class Taller3amimanera
{ 
 public static void main(String args[])
 {
 Scanner lea=new Scanner(System.in);
 int contador=1,cont_h=0,edad,cont_f=0,alumnos;
 double cont_eh=0,cont_em=0,promediog=0.0 ;
 String s;
 
 System.out.println("Cantidad de alumnos");
 alumnos=lea.nextInt();
 
 while (contador<=alumnos){
 System.out.println("M O F");
 s=lea.next();
 System.out.println("edad");
 edad=lea.nextInt();
 

 if (s.equals("m")){
 cont_eh=cont_eh+edad;
 cont_h=cont_h+1;
 
 }
 
 if(s.equals("f")){
 cont_em=cont_em+edad;
 cont_f=cont_f+1;
 }
 
 contador=contador+1;
 }
  promediog=(cont_eh+cont_em)/alumnos;
   cont_em=cont_em/cont_f;
cont_eh=cont_eh/cont_h;

//important:para que no de error por operaciones invalidas por cero hay que poner el mismo contador ya sea en el promedio que saques o porcentaje que quieras sacar

 System.out.println("Promedio edad de hombres "+cont_eh);

 System.out.println("Promedio edad de mujeres "+cont_em);
 System.out.println("Promedio grupal "+promediog);

 }
} 

