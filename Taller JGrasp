import java.util.Scanner;
class Taller24
 {
  public static void main(String h[])
  {
   Scanner lea=new Scanner(System.in);
   int x,contador=1,cont_d=0,mosd;
   System.out.println("digite un numero");
   x=lea.nextInt();
   while(contador<=x){
 if(x % contador==0){
   System.out.println("divisible entre "+contador );
   cont_d=cont_d+1;
   }
   
     contador=contador+1;
   }
   if(cont_d==2){
   System.out.println("numero de divisores "+cont_d);
   System.out.println(cont_d+" es numero primo");
   }
   
  }
 } 

