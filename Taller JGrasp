class Taller4
{
 public static void main(String h[])
 {
 
 Scanner lea=new Scanner(System.in);
 int contador=1,mes;
  double dinero=1000,gan,cont_i=0;
 
 System.out.println("INGRESE MES");
 mes=lea.nextInt();
 
 while (contador<=mes){
 gan=dinero*0.02;
 dinero=dinero+gan;
 System.out.println(contador+" Dinero "+dinero);
 
 
 
 cont_i=cont_i+gan;
  contador=contador+1;
 }
 System.out.println("Ganancia "+cont_i);
 
 
 
 
 
 }
 
} 

//EJERCICIO 5

import java.util.Scanner;
class Taller5
{
  public static void main(String h[])
  {
  
  Scanner lea=new Scanner(System.in);
  int contador=1,votos,candidato,cont_lopez=0,cont_santiago=0,cont_george=0;
  
  
  
  
  while (contador<=3){
  
  System.out.println("_______CANDIDATOS DE LAS ELECCIONES_______");
  System.out.println("_________________1.lopez__________");  
  System.out.println("________________2.santiago_______");  
  System.out.println("_________________3.george__________");  
  System.out.println("____________________________________________");
  candidato=lea.nextInt();
  System.out.println("___LA CANTIDAD DE VOTOS POR CANDIDATO FUE___");
  votos=lea.nextInt();
  
  if (candidato==1){
  cont_lopez=cont_lopez+votos;
  }
  
  if (candidato==2){
  cont_santiago=cont_santiago+votos;
  }  
  
  if (candidato==3){
  cont_george=cont_george+votos;
  }  
  
  
  contador=contador+1;
  }
  
  System.out.println("__CANTIDAD DE VOTOS POR CANDIDATO FUE__");
   System.out.println("___LOPEZ___"+cont_lopez);
   System.out.println("___SANTIAGO___"+cont_santiago);
   System.out.println("___GEORGE___"+cont_george);
   
   if ((cont_lopez>cont_santiago) && (cont_lopez>cont_george)){
   System.out.println("El nuevo gobernador es lopez "+cont_lopez);
   }
   
   if ((cont_santiago>cont_george) && (cont_santiago>cont_lopez)){
   System.out.println("El nuevo gobernador es santiago "+cont_santiago);
   }
   
   if ((cont_george>cont_santiago) && (cont_george>cont_lopez)){
   System.out.println("El nuevo gobernador es george "+cont_george);
   }   

      
   
  
  
  
  
  
  }
  
}  

