  double nota,menor=99999,suma_not=0,media;
  
  
  while (contador<=40){
  System.out.println(contador+" Alumno 'nota'");
  nota=lea.nextDouble();
  
  if (nota<menor){
  menor=nota;
  }
  
  suma_not=suma_not+nota;
  
  contador=contador+1;
  }
  System.out.println("La nota menor es "+menor);
  media=suma_not/3;
  System.out.println("La nota media es "+media);
  
  
  }
 } 

