  } 

//EJERCICIO 2

import java.util.Scanner;
class Taller2
 {
   public static void main(String h[])
   {
   
   Scanner lea=new Scanner(System.in);
   int contador=100,sum_n=0,contador2=98,rest,resta=0;
   
   while (contador>=0){
   
   System.out.println(contador);
   sum_n=sum_n+contador;
   
   contador=contador-4;
   }
   
    while (contador2>=0){ 
   resta=resta+contador2;
   
   contador2=contador2-4;
   }

   rest=sum_n-resta;
   System.out.println("la suma es y resta es  "+rest);
   
   
   
   }
  } 

