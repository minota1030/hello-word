import java.util.Scanner;
class Taller12
 {
  public static void main(String h[])
  {
  Scanner lea=new Scanner(System.in);
  int contador=1,n,voto,cont_abs=0,cont_contr=0,cont_fav=0,porcentaje,porcentaje2,porcentaje3;
  
  System.out.println("Numero a encuestar CANTIDAD");
  n=lea.nextInt();
  
   while (contador<=n){
   
   
   
   
   System.out.println("________________________________________");
   System.out.println("_________TRATADO DE LBRE COMERCIO________");
   System.out.println("________________________________________");
   System.out.println("_______________1.A FAVOR________________");
   System.out.println("_______________2.EN CONTRA________________");
   System.out.println("_______________3.SE ABSTIENE________________");
   System.out.println("________________________________________");
   System.out.println("________________________________________");   
   
   System.out.println("DIPUTADO");
   System.out.println("Escoja opcion");
   voto=lea.nextInt();
   
   if (voto==1){
   cont_fav=cont_fav+1;
   }
   if (voto==2){
   cont_contr=cont_contr+1;
   }
   if (voto==3){
   cont_abs=cont_abs+1;
   }

   contador=contador+1;
   }
  porcentaje=(cont_fav*100)/n;
  porcentaje2=(cont_contr*100)/n;
  porcentaje3=(cont_abs*100)/n;
  System.out.println("El "+porcentaje+" % a favor.");
  System.out.println("El "+porcentaje2+" % en contra.");
  System.out.println("El "+porcentaje3+" % se abstiene.");
 
  }
 } 

