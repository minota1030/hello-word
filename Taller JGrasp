import java.util.Scanner;
class Taller21
 {
   public static void main(String h[])
   {
    Scanner lea=new Scanner(System.in);
    int a,b,c,d,n,Aa,Bb,Cc,Dd,contador=1,fin;
    
    System.out.println("Fin del ciclo");
    fin=lea.nextInt();
   
    while (contador<=fin){
    
    
    System.out.println("DE UN NUMERO DE 4 CIFRAS");
    n=lea.nextInt();
    a=n/1000;
    b=n/100;
    c=n/10;
    d=n/1;
    
    System.out.println("Digite 1  "+a);
    System.out.println("Digite 2  "+b);
    System.out.println("Digite 3  "+c);
    System.out.println("Digite 4  "+d);
    System.out.println("_______________________________");
    
    Aa=a % 10;
    System.out.println("Digite 1  "+Aa);
    Bb=b % 10;
    System.out.println("Digite 2  "+Bb);
    Cc=c % 10;
    System.out.println("Digite 3  "+Cc);
    Dd=d % 10;
    System.out.println("Digite 4  "+Dd); 
    
    System.out.println("_______________________________"); 
    
    if ((Aa==Dd) && (Bb==Cc)){
    System.out.println("Los numeros son capicuas ");
    }          
    else
    {
     System.out.println("No son capicuas");
    }
    if (n==-1){
     fin=0;
    }
    if (n>9999){
    System.out.println("POR FAVOR DIGITE UN NUMERO MENOR A 10000");
    
    
    
    }
    
    
  
    }//fn mientras
   
   
   
   }
   
   
 
 }

//EJERCICIO 21

import java.util.Scanner;
class Taller21

 {
  public static void main(String h[])
  {
    
   Scanner lea=new Scanner(System.in);
   int numero=0,residuo=0,capicua=0,division=0,entero,numero_original;
   System.out.println("de numero ");
   numero_original=lea.nextInt();
   numero=numero_original;
   
   System.out.println("el numero original es"+numero);
   

   while(numero>0){
   
   residuo=numero%10;
   System.out.println("el ultimo digiti es "+residuo);
   division=numero/10;
   numero=division;
   capicua=capicua+residuo;
   capicua=capicua*10;
   
   }   
   capicua=capicua/10;
   
   if (capicua==numero_original){
   System.out.println("el numero "+numero+"es capicua");
   
   }
   else
   {
   System.out.println("el umero "+numero+" pailas");
   }
   
   
   
   
   System.out.println("el digito es "+residuo);
    
    
   }
 }   

