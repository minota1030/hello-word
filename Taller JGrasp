import java.util.Scanner;
class Taller20
 {
   public static void main(String h[])
   {
    Scanner lea=new Scanner(System.in);
    int a,b,c,d,n,Aa,Bb,Cc,Dd;
    System.out.println("DE UN NUMERO DE 4 CIFRAS");
    n=lea.nextInt();
    a=n/1000;
    b=n/100;
    c=n/10;
    d=n/1;
    
    System.out.println("Digite 1  "+a);
    System.out.println("Digite 2  "+b);
    System.out.println("Digite 3  "+c);
    System.out.println("Digite 4  "+d);
    System.out.println("_______________________________");
    
    Aa=a % 10;
    System.out.println("Digite 1  "+Aa);
    Bb=b % 10;
    System.out.println("Digite 2  "+Bb);
    Cc=c % 10;
    System.out.println("Digite 3  "+Cc);
    Dd=d % 10;
    System.out.println("Digite 4  "+Dd); 
    
    System.out.println("_______________________________"); 
    
    if ((Aa==Dd) && (Bb==Cc)){
    System.out.println("Los numeros son capicuas ");
    }          
    else
    {
     System.out.println("No son capicuas");
    }
  
   
   }
   
   
 
 }
  
