import java.util.Scanner;
class Taller11
{ 
 public static void main(String args[])
 {
 Scanner lea=new Scanner(System.in);
 int contador=1,cont_h=0,cont_f=0,alumnos;
 String s;
 
 System.out.println("Cantidad de alumnos");
 alumnos=lea.nextInt();
 
 
 while (contador<=alumnos){
 System.out.println("Marque F en caso de mujer y en caso de hombre H ");
 s=lea.next();

 if (s.equals("h")){
 cont_h=cont_h+1;
 }
 
 if(s.equals("f")){ 
 cont_f=cont_f+1;
 }
 
 
 
 contador=contador+1;
 }
 
 System.out.println(" hombres "+cont_h);
 System.out.println(" mujeres "+cont_f);
 }
} 

