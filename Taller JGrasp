import java.util.Scanner;
class ejercicio1
{
       public static void main (String e[])
       {
       Scanner lea=new Scanner(System.in);
       int contador=100;
       int acu_suma=0;
       
       while (contador >= 0)
       {
       System.out.println(contador);
       acu_suma = acu_suma + contador;
       contador = contador - 2;      
       
       }
       System.out.println("LA SUMA TOTAL ES  " +acu_suma);
       
    }
}

