import java.util.Scanner;
class Taller13
 {
  public static void main(String h[])
  {
  Scanner lea=new Scanner(System.in);
  int contador=1,n,opcion ,es_pri=0,es_sec=0,es_tec=0,es_pro=0,es_pos=0,porcentaje,porcentaje2,porcentaje3,porcentaje4,porcentaje5;
  System.out.println("Personas que alcanzo a encuestar en el dia ");
  n=lea.nextInt();
  
  while (contador<=n){
  System.out.println("__________________________________________");
  System.out.println("__Censo Nacional de Poblacion y Vivienda__");
  System.out.println("__________________________________________");
  System.out.println("__________ESTUDIOS ALCANZADOS_____________");
  System.out.println("__________________________________________");
  System.out.println("__1._____________Primaria__________________");
  System.out.println("__2.____________Secundaria_________________");
  System.out.println("__3.____________Carrera Tecnica____________");
  System.out.println("__4._________Estudios Profesional__________");
  System.out.println("__5.___________Estudios Posgrado___________");
  System.out.println("__________________________________________");
  System.out.println("__________________________________________");
  
  System.out.println("Escoger la opcion:");
  opcion=lea.nextInt();
  
  if (opcion==1){
  es_pri=es_pri+1;
  }  
  
  if (opcion==2){
  es_sec=es_sec+1;
  }

  if (opcion==3){
  es_tec=es_tec+1;
  }
  
  if (opcion==4){
  es_pro=es_pro+1;
  }
  
  if (opcion==5){
  es_pos=es_pos+1;
  }
  
  contador=contador+1;
  }
  porcentaje=(es_pri*100)/n;
  porcentaje2=(es_sec*100)/n;
  porcentaje3=(es_tec*100)/n;
  porcentaje4=(es_pro*100)/n;
  porcentaje5=(es_pos*100)/n;
  System.out.println("primaria  "+porcentaje+" %");
  System.out.println("Secundaria  "+porcentaje2+" %");
  System.out.println("Carrera Tecnica  "+porcentaje3+" %");
  System.out.println("Estudios Profesionales  "+porcentaje4+" %");
  System.out.println("Estudios Posgrado  "+porcentaje5+" %");
  
  }
 }
 
