import java.util.Scanner;
class Taller28
{
 public static void main(String h[])
 {
  Scanner lea=new Scanner(System.in);
  int cantidad,contador=1,cont_ap=0,cont_re=0,pro=0,repro=0;
  double nota,nota2,nota3,nota4,nota5;
  System.out.println("Cantidad de alumnos");
  cantidad=lea.nextInt();
  while (contador<=cantidad){
  System.out.println( contador+" alumno");
  nota=lea.nextDouble();
  nota=lea.nextDouble();
  nota=lea.nextDouble();
  nota=lea.nextDouble();
  nota=lea.nextDouble();
  
  if (nota>=3.0){
  cont_ap=cont_ap+1;
  }
  if (nota<3.0){
  cont_re=cont_re+1;
  }
  contador=contador+1;
  }
  if(cont_ap>=3){
  pro=pro+1;
  }
     if(cont_re>=3){
  repro=repro+1;
  
  }
 
 System.out.println("reprobaron son  "+repro);
 System.out.println("aprobaron son  "+pro);
 }
 }

